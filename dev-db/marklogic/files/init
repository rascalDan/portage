# $Header: $

depend() {
	use net localmount
}

start() {
	ebegin "Starting MarkLogic..."
	/opt/MarkLogic/bin/MarkLogic
	eend $?
}

stop() {
	ebegin "Stopping MarkLogic..."
	killall MarkLogic
	eend $?
	while ps -fC MarkLogic > /dev/null ; do sleep 1; done
}
